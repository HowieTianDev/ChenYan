<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register_next"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.howietian.chenyan.entrance.RegisterActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tb_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:navigationIcon="@drawable/ic_arrow_back_black_24dp"
        app:title="注册"
        app:titleTextColor="@color/dark"></android.support.v7.widget.Toolbar>

    <LinearLayout
        style="@style/InputBg"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="26dp">

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="5"
            android:background="@null"
            android:inputType="number"
            android:hint="手机号"
            android:lines="1"
            android:paddingStart="10dp"
            android:textColor="@color/dark"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/iv_delete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:padding="10dp"
            android:src="@drawable/ic_clear_grey_500_24dp"
            android:visibility="invisible" />
    </LinearLayout>

    <LinearLayout
        style="@style/InputBg"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="26dp">

        <EditText
            android:id="@+id/et_code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="5"
            android:background="@null"
            android:hint="短信验证码"
            android:lines="1"
            android:inputType="number"
            android:paddingStart="10dp"
            android:textColor="@color/dark"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_requestCode"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/sms_dark_bg"
            android:gravity="center"
            android:text="获取验证码"
            android:textColor="@color/white"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        style="@style/InputBg"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="26dp">

        <EditText
            android:id="@+id/et_pwd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="5"
            android:background="@null"
            android:hint="密码"
            android:inputType="textPassword"
            android:lines="1"
            android:paddingStart="10dp"
            android:textColor="@color/dark"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/iv_pwd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:padding="10dp"
            android:src="@drawable/ic_visibility_off_grey_500_24dp"
            android:visibility="invisible" />
    </LinearLayout>

    <LinearLayout
        style="@style/InputBg"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="26dp">

        <EditText
            android:id="@+id/et_nickname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="5"
            android:background="@null"
            android:hint="昵称"
            android:lines="1"
            android:paddingStart="10dp"
            android:textColor="@color/dark"
            android:textSize="14sp" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_register"
        style="@style/InputBg"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="26dp"
        android:background="@drawable/login_btn_selector"
        android:text="完成"
        android:textColor="@color/white" />

</LinearLayout>
