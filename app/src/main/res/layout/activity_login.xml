<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_login"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        tools:context="com.howietian.chenyan.entrance.LoginActivity">

        <android.support.v7.widget.Toolbar
            android:id="@+id/tb_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:navigationIcon="@drawable/ic_clear_black_24dp"
            app:title="登录"
            app:titleTextColor="@color/dark"></android.support.v7.widget.Toolbar>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="22dp"
            android:text="辰言账号登录"
            android:textColor="#999999"
            android:textSize="12sp" />

        <LinearLayout
            style="@style/InputBg"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="26dp">

            <EditText
                android:id="@+id/et_phone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="5"
                android:background="@null"
                android:inputType="number"
                android:hint="手机号"
                android:lines="1"
                android:paddingStart="10dp"
                android:textColor="@color/dark"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/iv_delete"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:padding="10dp"
                android:src="@drawable/ic_clear_grey_500_24dp"
                android:visibility="invisible" />
        </LinearLayout>

        <LinearLayout
            style="@style/InputBg"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="26dp">

            <EditText
                android:id="@+id/et_pwd"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="5"
                android:background="@null"
                android:hint="密码"
                android:inputType="textPassword"
                android:lines="1"
                android:paddingStart="10dp"
                android:textColor="@color/dark"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/iv_pwd"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:padding="10dp"
                android:src="@drawable/ic_visibility_off_grey_500_24dp"
                android:visibility="invisible" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_login"
            style="@style/InputBg"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="26dp"
            android:background="@drawable/login_btn_selector"
            android:text="登录"
            android:textColor="@color/white" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="26dp"
            android:layout_marginRight="26dp"
            android:layout_marginTop="26dp">

            <TextView
                android:id="@+id/tv_forget_pwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="忘记密码?"
                android:textColor="@color/dark"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="立即注册"
                android:textColor="@color/dark"
                android:textSize="14sp" />

        </RelativeLayout>


    </LinearLayout>

</RelativeLayout>