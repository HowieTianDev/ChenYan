<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/menu_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginLeft="74dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="-5dp"
        android:layout_marginBottom="-5dp"
        >


            <com.like.LikeButton
                android:id="@+id/like"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_alignLeft="@+id/comment"
                app:icon_size="18dp"
                app:like_drawable="@drawable/ic_thumb_up_orange_500_18dp"
                app:unlike_drawable="@drawable/ic_thumb_up_grey_500_18dp"
                app:circle_start_color="@color/colorPrimary"
                app:circle_end_color="@color/colorPrimaryDark"
                app:dots_primary_color="@color/colorAccent"
                app:dots_secondary_color="@color/colorPrimary"
                />
            <com.like.LikeButton
                android:id="@+id/comment"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_alignParentEnd="true"
                app:icon_size="18dp"
                app:icon_type="heart"
                app:like_drawable="@drawable/ic_message_grey_500_18dp"
                app:unlike_drawable="@drawable/ic_message_grey_500_18dp"
                app:circle_start_color="@color/colorPrimary"
                app:circle_end_color="@color/colorPrimaryDark"
                app:dots_primary_color="@color/colorAccent"
                app:dots_secondary_color="@color/colorPrimary"
                app:is_enabled="true"
                />


    </LinearLayout>

    <!--praise && comment-->
    <LinearLayout
        android:id="@+id/comment_praise_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/menu_layout"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/comment_praise"
        android:orientation="vertical">

        <com.howietian.chenyan.views.PraiseWidget
            android:id="@+id/praise"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="2dp"
            android:lineSpacingMultiplier="1"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            app:click_bg_color="@color/darkGrey"
            />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:background="@color/line_bg"
            />

        <LinearLayout
            android:id="@+id/comment_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="8dp"
            tools:background="@android:color/holo_red_dark"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@color/grey"
        android:layout_marginTop="20dp"
        />

</LinearLayout>
